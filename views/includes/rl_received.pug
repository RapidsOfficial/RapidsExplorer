.panel.panel-default
  .panel-heading
    h3.panel-title= t('richlist.received_top',{top : 100})
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th= t('richlist.address')
        th.hidden-xs= t('richlist.received_coin',{coin : settings.symbol})
    tbody
      - var count = 0
      each item in received
        - count = count + 1
        - var itemFixed = item.received / 100000000
        tr
          td(style='text-align:center;') 
            =count
          td
            a(href='/address/' + item.a_id) #{item.a_id}
            include ./rl_labels.pug
          td.hidden-xs
            =itemFixed.toFixed(8)